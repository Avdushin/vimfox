{
  "manifest_version": 3,
  "name": "Vimbox For Firefox",
  "version": "0.1.0",
  "description": "Переводит выделенный текст на странице",
  "permissions": ["activeTab", "scripting"],
  "author": "https://github.com/Avdushin",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ],
  "icons": {
    "48": "images/icon.png"
  }
}

{
  "manifest_version": 2,
  "name": "viimfox - a simple convenient translator (Vimbox For Firefox)",
  "version": "0.1.0",
  "description": "Компактный и удобный переводчик. Переводит выделенный текст на странице",
  "permissions": ["activeTab", "tabs", "http://localhost:5000/"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["css/page-popup.css"]
    }
  ],
  "web_accessible_resources": ["popup.css"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "author": "https://github.com/Avdushin",
  "icons": {
    "48": "images/icon.png"
  }
}
